<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/cart.css">
</head>

<body>
<%- include('../includes/navigation.ejs') %>
<main>
    <% if (cart.products.length > 0) { %>
        <div class="cart-box">
            <ul class="cart__item-list">
                <% cart.products.forEach(product => { %>
                <div class="cart-item__box">
                    <li class="cart__item">
                        <div class="item__info-box">
                            <h1><%= product.title %> - $<%= product.price %> x <%= product.cartItem.quantity %></h1>
                        </div>
                        <form action="/delete-from-cart" method="POST">
                            <input type="hidden" value="<%= product.cartItem.id %>" name="id">
                            <button class="btn danger" type="submit">Delete</button>
                        </form>
                    </li>
                </div>
                <% }) %>
            </ul>
            <hr>
            <div class="cart-box__action-box centered">
                <h3>Total price: <%= cart.totalPrice %></h3>
                <form action="/orders" method="POST">
                    <button class="btn danger" type="submit">Make order</button>
                </form>
            </div>
        </div>
    <% } else { %>
        <h1>No Products in Cart!</h1>
    <% } %>
</main>
<%- include('../includes/end.ejs') %>
