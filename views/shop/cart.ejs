<%- include('../includes/head.ejs') %>
</head>

<body>
<%- include('../includes/navigation.ejs') %>
<main>
    <% if (cart.products.length) { %>
        <ul class="product-list">
            <% for (let product of cart.products) { %>
                <li class="product-list__product-item">
                    <p class="product-item__product-title">Name - <%= product.title; %></p>
                    <img src="<%= product.imageUrl; %>" alt="<%= product.title; %>">
                    <p class="product-item__product-price">Price - <%= product.price; %></p>
                    <p class="product-item__product-price">Quantity - <%= product.quantity; %></p>
                    <div class="cart__actions">
                        <form action="/delete-from-cart" method="POST">
                            <input type="hidden" value="<%= product.productId; %>" name="productId">
                            <button class="btn" type="submit">Delete from cart</button>
                        </form>
                        <a href="/products/<%= product.productId; %>" class="btn">Details</a>
                    </div>
                </li>
            <% } %>
        </ul>
        <hr>
        <h2>Total price: <%= cart.totalPrice %></h2>
    <% } else { %>
        <h1>Your cart is empty...</h1>
    <% } %>
</main>
<%- include('../includes/end.ejs') %>